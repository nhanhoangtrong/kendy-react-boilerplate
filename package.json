{
  "name": "react-boilerplate",
  "version": "0.1.0",
  "description": "A React starter kit for quick building web app",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --progress --hot --inline",
    "build": "cross-env NODE_ENV=production webpack --progress",
    "start": "npm run build && http-server ./dist -o",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "jest"
  },
  "main": "index.js",
  "repository": "git@github.com:nhanhoangtrong/kendy-react-boilerplate",
  "author": "Nhan Hoang <siege250294@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/classnames": "^2.2.0",
    "@types/history": "^4.6.0",
    "@types/jest": "^22.2.2",
    "@types/lodash": "^4.14.72",
    "@types/node": "^8.0.20",
    "@types/react": "^16.0.2",
    "@types/react-dom": "^16.0.0",
    "@types/react-hot-loader": "^3.0.3",
    "@types/react-motion": "^0.0.25",
    "@types/react-redux": "^5.0.0",
    "@types/react-router": "^4.0.14",
    "@types/react-router-redux": "^5.0.6",
    "@types/react-tap-event-plugin": "^0.0.30",
    "@types/react-transition-group": "^2.0.4",
    "@types/redux-actions": "^2.2.2",
    "@types/webpack": "^3.0.8",
    "@types/webpack-env": "^1.13.0",
    "babel-loader": "^7.1.4",
    "chalk": "^2.1.0",
    "clean-webpack-plugin": "^0.1.16",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.4",
    "dotenv": "^5.0.1",
    "enzyme": "^3.1.1",
    "enzyme-adapter-react-16": "^1.0.4",
    "eslint": "^4.4.1",
    "eslint-loader": "^2.0.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "html-webpack-plugin": "^3.1.0",
    "http-server": "^0.11.1",
    "jest": "^22.4.3",
    "nib": "^1.1.2",
    "prettier": "^1.11.1",
    "source-map-loader": "^0.2.1",
    "style-loader": "^1.1.3",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "ts-jest": "^22.4.2",
    "ts-loader": "^4.1.0",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "webpack": "^4.0.0",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.0.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "history": "^4.6.3",
    "immutable": "^3.8.1",
    "raf": "^3.4.0",
    "react": "^16.1.0",
    "react-dom": "^16.1.0",
    "react-hot-loader": "^4.0.0",
    "react-motion": "^0.5.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.1.2",
    "react-router-redux": "^5.0.0-alpha.8",
    "react-transition-group": "^2.2.0",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-thunk": "^2.2.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/test/setupTests.js",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
